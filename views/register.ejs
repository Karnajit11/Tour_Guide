<section class="register">
<div class="res-wrap">
    <h1>Sign Up</h1>
    <%- include ('partials/messages') %>    
    <form action="/user/register" method="POST">
        <input type="text" placeholder="Username" id="name" name="name"  value="<%= typeof name != 'undefined' ? name : '' %>">
        <input type="email" placeholder="Email" id="email" name="email" value="<%= typeof email != 'undefined' ? email : '' %>">
        <input type="password" placeholder="Password" id="password" name="password" value="<%= typeof password != 'undefined' ? password : '' %>">
        <input type="password" placeholder="Confirm password" id="password2" name="password2" value="<%= typeof password2 != 'undefined' ? password2 : '' %>">
        <input type="submit" value="Submit">
        <h5>Have an account? <a href="/user/login">Log In</a></h5>
    </form>

</div>

</section>